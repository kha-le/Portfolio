<%= render "layouts/errors", :object => @skill %>

<%= form_for @skill do |f| %>
  <%= f.label :name %>:
  <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :url %>:
  <br>
  <%= f.text_field :url %>
  <br>
  <%= f.label :description %>:
  <br>
  <%= f.text_area :description, :cols => 40, :rows => 10 %>
  <hr>
  <%= f.submit %>
<% end %>
